<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pt_ll_inner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/pname_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/ps1_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ps1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/ps2_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom 2: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/ps3_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom 3: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ps3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/ps4_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom 4: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ps4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/ps5_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom 5: "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ps5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>